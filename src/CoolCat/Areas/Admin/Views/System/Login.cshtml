@model CoolCat.LoginDTO
@{
    
}

<h1>Login</h1>

<div>
    @using (Html.BeginForm(FormMethod.Post))
    {
        @Html.ValidationSummary();
        <div class="form-group">
            @Html.LabelFor(p => p.UserName)
            @Html.TextBoxFor(p => p.UserName, new { @class = "form-control", placeholder = "User Name" })
        </div>
        <div class="form-group">
            @Html.LabelFor(p => p.Password)
            @Html.PasswordFor(p => p.Password, new { @class = "form-control", placeholder = "Password" })
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Submit</button>
        </div>
    }
</div>
